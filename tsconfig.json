{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@shared/models": [
        "shared/models"
      ],
      "@shared/service": [
        "shared/services"
      ],
      "@client/rest": [
        "client"
      ],
      "@config": [
        "config"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
